%div{ style: 'width: 800px;margin: auto'}
  - @messages.each do |msg|
    - position = msg.sender_id == current_user.id ? 'left' : 'right'
    - color = msg.sender_id == current_user.id ? 'white' : 'grey'
    %div{ style: "width: 300px;float: #{position};background-color: #{color}; margin: auto" }
      = msg.content
    %br
  %div{ style: 'clear: both; text-align: center' }
    = form_for Message.new, url: message_index_path, method: :post do |f|
      = f.text_field :content
      = f.hidden_field :receiver_id, value: @receiver.id
      = f.hidden_field :sender_id, value: current_user.id
      = f.submit 'Envoyer'